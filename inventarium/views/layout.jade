        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active.dropdown 
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | usuaris 
                span.caret
              ul.dropdown-menu(role='menu')
                li.dropdown-header Mantenimient d'usuaris
                li.divider
                li
                  a(href='/users') llistat
                li
                  a(href='/users/c') nou
            li
              a(href='/dpto') Departaments
            li
              a(href='/Ubi') Ubicacions
            li
              a(href='/MotBai') Motius de Baixa
          ul.nav.navbar-nav.navbar-right
            li
              a(href='http://inventarium.infomerce.es/wiki', target='blank') 
                span.glyphicon.glyphicon-info-sign 
                span  wiki
        // /.nav-collapse
